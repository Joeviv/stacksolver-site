---
// Astro Frontmatter

import FeatureCard from './FeatureCard.astro';


const featureCardsDataEs = [
    { number: 1, title: 'Transformación Empresarial y Gestión del Cambio', description: 'Empresas de todas las industrias pueden beneficiarse de un enfoque de transformación...', videoUrl: 'https://comercial-media.s3.amazonaws.com/ClarisConnectShort7.mp4' },
    { number: 2, title: 'Resiliencia Organizacional y Gestión de la Cadena de Suministro', description: 'El entorno empresarial es cada vez más volátil...', videoUrl: 'https://comercial-media.s3.amazonaws.com/cri.mp4' },
    { number: 3, title: 'Liderazgo y Obeya', description: 'La transformación digital requiere ajustar la forma en que los líderes interactúan con las personas...', videoUrl: 'https://comercial-media.s3.amazonaws.com/ClarisConnectShort7.mp4' },
    { number: 4, title: 'Tu Título 4', description: 'Tu Descripción 4', videoUrl: 'https://comercial-media.s3.amazonaws.com/ClarisConnectShort7.mp4' },
    { number: 5, title: 'cri 5', description: 'Tu Descripción 5', videoUrl: 'https://comercial-media.s3.amazonaws.com/cri.mp4' },
    { number: 6, title: 'CRI video 4', description: 'Tu Descripción 6', videoUrl: 'https://comercial-media.s3.amazonaws.com/cri.mp4' }
];

const dataToUse = featureCardsDataEs; 

---

{/* --- Estructura HTML --- */}
<section class="features-grid-section">
  <div class="section-header">
    <h2>Cómo Habilitamos la Transformación Organizacional</h2>
    <p>Ofrecemos varias propuestas de valor como parte de nuestros servicios de Excelencia Organizacional y Transformación.</p>
  </div>

  <div class="grid-container">
    {dataToUse.map(card => (
        <FeatureCard
            number={card.number}
            title={card.title}
            description={card.description}
            videoUrl={card.videoUrl}
        />
    ))}
  </div>
</section>

{/* --- Estilos CSS --- */}
<style>
  .features-grid-section {
    padding: 3rem 1rem;
    background-color: #f8f8f8;
    text-align: center;
  }

  .section-header {
    max-width: 800px;
    margin: 0 auto 2rem auto;
    text-align: center;
  }

  .section-header h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #333;
  }

  .section-header p {
    font-size: 1.1rem;
    color: #555;
  }

  .grid-container {
    display: grid;
    grid-template-columns: 1fr; /* Una sola columna */
    gap: 1.5rem;
    max-width: 700px;
    margin: 0 auto;
    padding: 0 1rem;
  }

</style>