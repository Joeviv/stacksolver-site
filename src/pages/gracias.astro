---
// src/pages/gracias.astro
import BaseLayout from '@/layouts/BaseLayout.astro';

const pageTitle = "Mensaje Enviado | Stacksolver.tech";
---
<BaseLayout title={pageTitle}>
  <main class="thank-you-page section-padding">
    <div class="container narrow-container text-center">
      <div class="icon-success">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="80" height="80">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
        </svg>
      </div>
      <h1>¡Gracias por tu Mensaje!</h1>
      <p class="lead">Hemos recibido tu consulta y nos pondremos en contacto contigo a la brevedad posible.</p>
      <div class="actions">
        <a href="/" class="cta-button">Volver al Inicio</a>
        <a href="/nosotros#contacto-section" class="cta-button secondary">Enviar Otro Mensaje</a>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .thank-you-page {
    background-color: #f8f9fa; /* Fondo claro */
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .icon-success svg {
    color: #28a745; /* Verde éxito */
    margin-bottom: 1.5rem;
  }
  .thank-you-page h1 {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 1rem;
  }
  .thank-you-page .lead {
    font-size: 1.25rem;
    color: #555;
    margin-bottom: 2.5rem;
    line-height: 1.6;
  }
  .actions .cta-button {
    text-decoration: none;
    padding: 0.8rem 1.8rem;
    font-size: 1rem;
    border-radius: 5px;
    margin: 0 0.5rem;
    font-weight: bold;
    transition: background-color 0.2s ease, color 0.2s ease;
  }
  .actions .cta-button { /* Botón primario */
    background-color: #007bff;
    color: white;
    border: 1px solid #007bff;
  }
  .actions .cta-button:hover {
    background-color: #0056b3;
    border-color: #0056b3;
  }
  .actions .cta-button.secondary {
    background-color: #6c757d;
    color: white;
    border: 1px solid #6c757d;
  }
  .actions .cta-button.secondary:hover {
    background-color: #5a6268;
    border-color: #5a6268;
  }

  @media (max-width: 767px) {
    .thank-you-page h1 { font-size: 2rem; }
    .thank-you-page .lead { font-size: 1.1rem; }
    .actions .cta-button {
      display: block;
      width: 100%;
      margin-bottom: 1rem;
    }
    .actions .cta-button:last-child {
      margin-bottom: 0;
    }
  }
</style>