---
// ARCHIVO: src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import { Hero } from "../components/Hero"; // Usamos solo la parte visual
import { SparklesIcon, ArrowRightIcon } from "@heroicons/react/24/outline";
import SmartButtons from "../components/SmartButtons"; // Importar el nuevo componente
import { siteSEO } from "../data/seoData";

// Combinar keywords globales + específicas de home
const pageKeywords = [...siteSEO.global.keywords, ...siteSEO.pages.home.keywords].join(", ");
---

<Layout
    title={siteSEO.pages.home.title}
    description={siteSEO.pages.home.description}
    keywords={pageKeywords}
    type="website"
>
    <div class="relative min-h-screen flex flex-col">
        <!-- Hero Section con Animaciones de Fondo -->
        <section
            class="relative min-h-svh flex flex-col items-center justify-center px-6 overflow-hidden border-b border-zinc-900"
        >
            <!-- Fondo Animado (Hero.tsx) -->
            <div class="absolute inset-0 z-0 opacity-40 pointer-events-none">
                <Hero client:visible />
            </div>

            <!-- Contenido Principal -->
            <div
                class="relative z-10 text-center max-w-5xl mx-auto mt-10 md:mt-20"
            >
                <!-- Botones Inteligentes -->
                <SmartButtons client:load />

                <div
                    class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-zinc-900/80 border border-zinc-800 text-blue-400 text-xs font-medium mb-8 animate-in fade-in slide-in-from-bottom-4 duration-1000"
                >
                    <span class="w-2 h-2 rounded-full bg-blue-500 animate-pulse"
                    ></span>
                    Soluciones Tecnológicas Integrales
                </div>

                <h1
                    class="text-4xl sm:text-5xl md:text-7xl lg:text-8xl font-bold tracking-tighter text-white mb-8 leading-[1.1] animate-in fade-in slide-in-from-bottom-6 duration-1000 delay-100"
                >
                    StackSolver <br />
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-purple-600"
                        >Tech Ecosystem</span
                    >
                </h1>

                <p
                    class="text-lg md:text-xl text-zinc-400 max-w-2xl mx-auto mb-10 font-light leading-relaxed animate-in fade-in slide-in-from-bottom-8 duration-1000 delay-200"
                >
                    Desde Gobernanza Corporativa hasta Desarrollo a Medida.
                    Transformamos empresas complejas en operaciones eficientes
                    mediante tecnología estratégica y consultoría experta.
                </p>

                <div
                    class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-in fade-in slide-in-from-bottom-8 duration-1000 delay-300"
                >
                    <a
                        href="/servicios/ai-local/ai-proto"
                        class="px-8 py-4 rounded-full bg-white text-black font-bold hover:bg-zinc-200 transition-all flex items-center gap-2 hover:scale-105 transform duration-200"
                    >
                        <SparklesIcon className="w-5 h-5" />
                        Explorar Servicios
                    </a>
                    <a
                        href="/contacto"
                        class="px-8 py-4 rounded-full bg-zinc-900/50 text-white border border-zinc-700 font-medium hover:bg-zinc-900 transition-all flex items-center gap-2 hover:border-zinc-500"
                    >
                        Hablemos
                        <ArrowRightIcon className="w-4 h-4" />
                    </a>
                </div>
            </div>
        </section>

        <!-- Sección de Introducción Rápida -->
        <section class="py-24 bg-black">
            <div class="max-w-7xl mx-auto px-6">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div
                        class="p-8 rounded-3xl bg-zinc-900/20 border border-zinc-800/50 hover:border-zinc-700 transition-colors"
                    >
                        <h3 class="text-xl font-bold text-white mb-3">
                            Consultoría Estratégica
                        </h3>
                        <p class="text-zinc-400 text-sm leading-relaxed">
                            No solo escribimos código. Entendemos tu modelo de
                            negocio para proponer soluciones que generan ROI
                            real.
                        </p>
                    </div>
                    <div
                        class="p-8 rounded-3xl bg-zinc-900/20 border border-zinc-800/50 hover:border-zinc-700 transition-colors"
                    >
                        <h3 class="text-xl font-bold text-white mb-3">
                            Desarrollo a Medida
                        </h3>
                        <p class="text-zinc-400 text-sm leading-relaxed">
                            Expertos en React, Astro, Claris FileMaker y
                            ecosistemas Cloud. Software que se adapta a ti, no
                            al revés.
                        </p>
                    </div>
                    <div
                        class="p-8 rounded-3xl bg-zinc-900/20 border border-zinc-800/50 hover:border-zinc-700 transition-colors"
                    >
                        <h3 class="text-xl font-bold text-white mb-3">
                            Seguridad y GRC
                        </h3>
                        <p class="text-zinc-400 text-sm leading-relaxed">
                            Protege tus activos. Implementamos marcos de
                            gobernanza, riesgo y cumplimiento (GRC) de clase
                            mundial.
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </div>
</Layout>
