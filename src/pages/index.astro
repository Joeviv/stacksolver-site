---
// ARCHIVO: src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import { Hero } from "../components/Hero"; // Usamos solo la parte visual
import { SparklesIcon, ArrowRightIcon } from "@heroicons/react/24/outline";
import SmartButtons from "../components/SmartButtons"; // Importar el nuevo componente
import VideoEmbed from "../components/VideoEmbed";
import { siteSEO } from "../data/seoData";

// Combinar keywords globales + específicas de home
const pageKeywords = [
    ...siteSEO.global.keywords,
    ...siteSEO.pages.home.keywords,
].join(", ");
---

<Layout
    title={siteSEO.pages.home.title}
    description={siteSEO.pages.home.description}
    keywords={pageKeywords}
    type="website"
>
    <div class="relative min-h-screen flex flex-col">
        <!-- Hero Section con Animaciones de Fondo -->
        <section
            class="relative min-h-svh flex flex-col items-center justify-center px-6 overflow-hidden pt-24"
        >
            <!-- Fondo Animado (Hero.tsx) -->
            <div class="absolute inset-0 z-0 opacity-40 pointer-events-none">
                <Hero client:visible />
            </div>

            <!-- Contenido Principal -->
            <div class="relative z-10 text-center max-w-7xl mx-auto">
                <!-- Botones Inteligentes -->
                <SmartButtons client:load />

                <!-- Sección de Videos Autoplay -->
                <div
                    class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8 mb-16"
                >
                    <!-- Video 1 -->
                    <div class="space-y-3">
                        <h3
                            class="text-base md:text-lg font-semibold text-zinc-500 dark:text-zinc-400 text-center"
                        >
                            Optimización Empresarial
                        </h3>
                        <VideoEmbed
                            client:load
                            vimeoId="1152285799"
                            title="Optimización Empresarial"
                            delay={0}
                        />
                    </div>

                    <!-- Video 2 -->
                    <div class="space-y-3">
                        <h3
                            class="text-base md:text-lg font-semibold text-zinc-500 dark:text-zinc-400 text-center"
                        >
                            ERP/GRC con Rust y AI Local
                        </h3>
                        <VideoEmbed
                            client:load
                            vimeoId="1152338281"
                            title="ERP/GRC con Rust y AI Local"
                            delay={3}
                        />
                    </div>

                    <!-- Video 3 -->
                    <div class="space-y-3">
                        <h3
                            class="text-base md:text-lg font-semibold text-zinc-500 dark:text-zinc-400 text-center"
                        >
                            ERP/GRC con Claris FileMaker
                        </h3>
                        <VideoEmbed
                            client:load
                            vimeoId="1134880582"
                            title="ERP/GRC con Claris FileMaker"
                            delay={6}
                        />
                    </div>
                </div>

                <h1
                    class="text-4xl sm:text-5xl md:text-7xl lg:text-8xl font-bold tracking-tighter text-zinc-900 dark:text-white mb-8 leading-[1.1] animate-in fade-in slide-in-from-bottom-6 duration-1000 mt-8"
                >
                    StackSolver <br />
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-500 dark:to-purple-500"
                        >Tech Ecosystem</span
                    >
                </h1>

                <p
                    class="text-lg md:text-xl text-zinc-600 dark:text-zinc-400 max-w-2xl mx-auto mb-10 font-light leading-relaxed animate-in fade-in slide-in-from-bottom-8 duration-1000 delay-200"
                >
                    Desde Gobernanza Corporativa hasta Desarrollo a Medida.
                    Transformamos empresas complejas en operaciones eficientes
                    mediante tecnología estratégica y consultoría experta.
                </p>

                <div
                    class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-in fade-in slide-in-from-bottom-8 duration-1000 delay-300"
                >
                    <a
                        href="/servicios/ai-local"
                        class="px-8 py-4 rounded-full bg-zinc-900 text-white hover:bg-zinc-800 dark:bg-white dark:text-black dark:hover:bg-zinc-200 font-bold transition-all flex items-center gap-2 hover:scale-105 transform duration-200"
                    >
                        <SparklesIcon className="w-5 h-5" />
                        Explorar Servicios
                    </a>
                    <a
                        href="/contacto"
                        class="px-8 py-4 rounded-full bg-white text-zinc-900 border border-zinc-200 hover:bg-zinc-50 dark:bg-zinc-900/50 dark:text-white dark:border-zinc-700 dark:hover:bg-zinc-900 font-medium transition-all flex items-center gap-2 hover:border-zinc-300 dark:hover:border-zinc-500"
                    >
                        Hablemos
                        <ArrowRightIcon className="w-4 h-4" />
                    </a>
                </div>
            </div>
        </section>

        <!-- Sección de Introducción Rápida -->
        <section
            class="py-32 bg-zinc-50 dark:bg-black transition-colors duration-300"
        >
            <div class="max-w-7xl mx-auto px-6">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <a
                        href="/servicios/enterprise"
                        class="block p-8 rounded-3xl bg-white border border-zinc-200 hover:border-blue-500 hover:shadow-lg dark:bg-zinc-900/20 dark:border-zinc-800/50 dark:hover:border-zinc-700 transition-all duration-300 group"
                    >
                        <h3
                            class="text-xl font-bold text-zinc-900 dark:text-white mb-3 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
                        >
                            Consultoría Estratégica
                        </h3>
                        <p
                            class="text-zinc-600 dark:text-zinc-400 text-sm leading-relaxed"
                        >
                            No solo escribimos código. Entendemos tu modelo de
                            negocio para proponer soluciones que generan ROI
                            real.
                        </p>
                    </a>
                    <a
                        href="/servicios/web"
                        class="block p-8 rounded-3xl bg-white border border-zinc-200 hover:border-blue-500 hover:shadow-lg dark:bg-zinc-900/20 dark:border-zinc-800/50 dark:hover:border-zinc-700 transition-all duration-300 group"
                    >
                        <h3
                            class="text-xl font-bold text-zinc-900 dark:text-white mb-3 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
                        >
                            Desarrollo a Medida
                        </h3>
                        <p
                            class="text-zinc-600 dark:text-zinc-400 text-sm leading-relaxed"
                        >
                            Expertos en React, Astro, Claris FileMaker y
                            ecosistemas Cloud. Software que se adapta a ti, no
                            al revés.
                        </p>
                    </a>
                    <a
                        href="/servicios/grc"
                        class="block p-8 rounded-3xl bg-white border border-zinc-200 hover:border-blue-500 hover:shadow-lg dark:bg-zinc-900/20 dark:border-zinc-800/50 dark:hover:border-zinc-700 transition-all duration-300 group"
                    >
                        <h3
                            class="text-xl font-bold text-zinc-900 dark:text-white mb-3 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
                        >
                            Seguridad y GRC
                        </h3>
                        <p
                            class="text-zinc-600 dark:text-zinc-400 text-sm leading-relaxed"
                        >
                            Protege tus activos. Implementamos marcos de
                            gobernanza, riesgo y cumplimiento (GRC) de clase
                            mundial.
                        </p>
                    </a>
                </div>
            </div>
        </section>
    </div>
</Layout>
